  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    :root {
      --brand: #2563eb;
      --accent: #10b981;
      --muted: #6b7280;
    }
    body {
      font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
      background-color: #f8fafc;
    }
    .glass-effect {
      backdrop-filter: blur(10px);
      background-color: rgba(255, 255, 255, 0.8);
    }
    .table-scroll {
      max-height: 56vh;
      overflow: auto;
    }
    .status-created {
      background-color: #fef3c7;
      color: #d97706;
    }
    .status-in-progress {
      background-color: #dbeafe;
      color: #2563eb;
    }
    .status-closed {
      background-color: #d1fae5;
      color: #059669;
    }
    .shadow-card {
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    }
    .shadow-card-hover {
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }
    .transition-all {
      transition: all 0.3s ease;
    }
    
    /* Modal Styles */
    .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(5px);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      padding: 20px;
      opacity: 0;
      animation: fadeIn 0.3s ease-out forwards;
    }
    
    .modal-container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
      width: 100%;
      max-width: 700px;
      overflow: hidden;
      transform: translateY(20px);
      animation: slideUp 0.4s ease-out forwards;
      max-height: 90vh;
      overflow-y: auto;
    }
    
    .modal-header {
      background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
      color: white;
      padding: 24px 30px;
      position: relative;
    }
    
    .modal-body {
      padding: 30px;
    }
    
    .form-group {
      margin-bottom: 24px;
    }
    
    .form-label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: #374151;
      font-size: 14px;
    }
    
    .form-input, .form-select, .form-textarea {
      width: 100%;
      padding: 12px 16px;
      border: 1px solid #d1d5db;
      border-radius: 10px;
      font-size: 15px;
      transition: all 0.3s;
      background-color: #f9fafb;
    }
    
    .form-input:focus, .form-select:focus, .form-textarea:focus {
      outline: none;
      border-color: #4f46e5;
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
      background-color: white;
    }
    
    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }
    
    .form-actions {
      display: flex;
      justify-content: flex-end;
      gap: 12px;
      margin-top: 32px;
      padding-top: 20px;
      border-top: 1px solid #e5e7eb;
    }
    
    .btn {
      padding: 12px 24px;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
      color: white;
      border: none;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
    }
    
    .btn-secondary {
      background: white;
      color: #6b7280;
      border: 1px solid #d1d5db;
    }
    
    .btn-secondary:hover {
      background: #f9fafb;
      color: #374151;
    }
    
    .file-upload {
      border: 2px dashed #d1d5db;
      border-radius: 10px;
      padding: 30px;
      text-align: center;
      transition: all 0.3s;
      cursor: pointer;
    }
    
    .file-upload:hover {
      border-color: #4f46e5;
      background: #f8faff;
    }
    
    .file-upload i {
      font-size: 40px;
      color: #9ca3af;
      margin-bottom: 12px;
    }
    
    .file-upload.dragover {
      border-color: #4f46e5;
      background: #f0f4ff;
    }
    
    .tag {
      display: inline-flex;
      align-items: center;
      background: #e0e7ff;
      color: #4f46e5;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 13px;
      margin-right: 8px;
      margin-bottom: 8px;
    }
    
    .tag i {
      margin-left: 6px;
      cursor: pointer;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @keyframes slideUp {
      from { transform: translateY(20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    
    @media (max-width: 640px) {
      .form-row {
        grid-template-columns: 1fr;
      }
      
      .modal-body {
        padding: 20px;
      }
      
      .modal-header {
        padding: 20px;
      }
    }
  </style>
</head>
