  <!-- Modal (hidden by default) -->
  <div id="modal" class="fixed inset-0 bg-black/40 hidden items-center justify-center p-4 z-20">
    <div class="bg-white rounded-xl max-w-lg w-full p-6 shadow-lg transition-all transform scale-95">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold flex items-center gap-2">
          <i class="fas fa-plus-circle text-sky-500"></i>
          Добавить новое дело
        </h3>
        <button id="closeModal" class="text-gray-400 hover:text-gray-600 transition-all">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <form class="grid grid-cols-1 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Клиент</label>
          <div class="relative">
            <input placeholder="Выберите клиента" class="w-full p-3 rounded-lg border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-300 pl-10 transition-all" />
            <i class="fas fa-user absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Юрист</label>
          <div class="relative">
            <input placeholder="Выберите юриста" class="w-full p-3 rounded-lg border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-300 pl-10 transition-all" />
            <i class="fas fa-user-tie absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Счёт</label>
          <div class="relative">
            <input placeholder="Введите сумму счёта" class="w-full p-3 rounded-lg border border-gray-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-300 pl-10 transition-all" />
            <i class="fas fa-file-invoice-dollar absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
          </div>
        </div>
        <div class="flex justify-end gap-2 mt-4">
          <button type="button" id="closeModal2" class="px-4 py-2.5 rounded-lg border border-gray-300 hover:bg-gray-50 transition-all">Отмена</button>
          <button type="submit" class="px-4 py-2.5 rounded-lg bg-gradient-to-r from-sky-500 to-indigo-600 text-white shadow-md hover:shadow-lg transition-all flex items-center gap-2">
            <i class="fas fa-save"></i>
            Сохранить
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const addBtn = document.getElementById('addBtn');
    const modal = document.getElementById('modal');
    const closeModal = document.getElementById('closeModal');
    const closeModal2 = document.getElementById('closeModal2');
    
    addBtn && addBtn.addEventListener('click', () => {
      modal.classList.remove('hidden');
      setTimeout(() => {
        modal.querySelector('.transform').classList.remove('scale-95');
        modal.querySelector('.transform').classList.add('scale-100');
      }, 10);
    });
    
    const closeModalFunc = () => {
      modal.querySelector('.transform').classList.remove('scale-100');
      modal.querySelector('.transform').classList.add('scale-95');
      setTimeout(() => {
        modal.classList.add('hidden');
      }, 150);
    };
    
    closeModal && closeModal.addEventListener('click', closeModalFunc);
    closeModal2 && closeModal2.addEventListener('click', closeModalFunc);
    
    // close on backdrop click
    modal && modal.addEventListener('click', (e) => { 
      if(e.target === modal) closeModalFunc();
    });

    // simple search filter for demo (searches table cells)
    const search = document.getElementById('search');
    search && search.addEventListener('input', (e) => {
      const q = e.target.value.toLowerCase();
      document.querySelectorAll('tbody tr').forEach(row => {
        const text = row.innerText.toLowerCase();
        row.style.display = text.includes(q) ? '' : 'none';
      })
    });
  </script>
</body>
