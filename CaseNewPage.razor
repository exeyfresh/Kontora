    <!-- Controls -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
      <div class="flex flex-col sm:flex-row sm:items-center gap-3">
        <button id="addBtn" class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white px-4 py-2.5 rounded-lg shadow-md hover:shadow-lg transition-all">
          <i class="fas fa-plus"></i>
          Добавить дело
        </button>
        <div class="relative">
          <input id="search" type="search" placeholder="Поиск по ID, клиенту или юристу" class="pl-10 pr-4 py-2.5 rounded-lg border border-gray-200 shadow-sm w-full sm:w-64 focus:outline-none focus:ring-2 focus:ring-sky-300 transition-all" />
