@page "/reportpage"
@using kontora1.Pages
@using Npgsql
@inject NpgsqlConnection dbConnection

<div class="reports-container">
    <h3 class="reports-title">Формирование отчетов</h3>

    <div class="button-group">
        <button class="report-button income" @onclick="() => OpenModal(ReportType.Income)">Доходы</button>
        <button class="report-button debt" @onclick="() => OpenModal(ReportType.Debt)">Задолженности</button>
        <button class="report-button lawyer" @onclick="() => OpenModal(ReportType.Lawyer)">Работа юристов</button>
    </div>

    @if (showModal)
    {
        <div class="modal-backdrop">
            <div class="modal-content-wrapper">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4>@GetModalTitle()</h4>
                        <button class="close-button" @onclick="CloseModal">×</button>
                    </div>

                    <div class="modal-body">
                        @if (selectedReport == ReportType.Lawyer)
                        {
                            <div class="form-group">
                                <label>Выберите юриста:</label>
                                <select @bind="selectedLawyerId" class="form-input">
                                    <option value="0">Все юристы</option>
                                    @foreach (var lawyer in lawyers)
                                    {
                                        <option value="@lawyer.id_user">@lawyer.FullName</option>
                                    }
                                </select>
                            </div>
                        }

                        <div class="date-range-picker">
                            <div class="date-input">
                                <label><i class="far fa-calendar-alt"></i> Начальная дата:</label>
                                <input type="date" @bind="startDate" class="form-input" />
                            </div>
                            <div class="date-input">
                                <label><i class="far fa-calendar-alt"></i> Конечная дата:</label>
                                <input type="date" @bind="endDate" class="form-input" />
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button class="generate-button" @onclick="GenerateSelectedReport">
                            <i class="fas fa-file-export"></i> Сформировать
                        </button>
                        <button class="cancel-button" @onclick="CloseModal">
                            <i class="fas fa-ban"></i> Отмена
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (currentReport != null)
    {
        <div class="report-result-container">
            <div class="report-header">
                <h4>Результат отчета</h4>
                <button class="close-button small" @onclick="ClearReport">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="report-content">
                @switch (currentReport)
                {
                    case Reports.IncomeReport incomeReport:
                        <h5 class="report-title"> Отчет о доходах</h5>
                        <p>Период: @incomeReport.Period</p>

                        <table class="report-table">
                            <thead>
                                <tr>
                                    <th>№ счета</th>
                                    <th>Сумма счета</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bill in incomeReport.Bills)
                                {
                                    <tr>
                                        <td>@bill.BillNumber</td>
                                        <td>@bill.Amount.ToString("N0")</td>
                                    </tr>
                                }
                                @if (incomeReport.Bills.Count == 0)
                                {
                                    <tr>
                                        <td colspan="2">Нет данных</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Итого</th>
                                    <td>@incomeReport.TotalIncome.ToString("N0")</td>
                                </tr>
                                <tr>
                                    <td colspan="2"></td>
                                </tr>
                                <tr>
                                    <th>Количество счетов</th>
                                    <td>@incomeReport.TotalBills</td>
                                </tr>
                                <tr>
                                    <th>Количество оплаченных счетов</th>
                                    <td>@incomeReport.TotalPaidBills</td>
                                </tr>
                            </tfoot>
                        </table>
                        break;

                    case Reports.DebtReport debtReport:
                        <h5 class="report-title">Отчет о задолженностях</h5>
                        <p>Период: @debtReport.Period</p>
                        <table class="report-table">
                            <thead>
                                <tr>
                                    <th>Клиент</th>
                                    <th>Сумма задолженности</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in debtReport.Items)
                                {
                                    <tr>
                                        <td>@item.LastName @item.FirstName</td>
                                        <td>@item.Amount.ToString("N2") руб.</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Общая сумма задолженностей:</th>
                                    <td>@debtReport.TotalDebt.ToString("N2") руб.</td>
                                </tr>
                            </tfoot>
                        </table>
                        break;

                    case Reports.LawyerWorkReport lawyerReport:
                        <h5 class="report-title">Отчет о работе юристов</h5>
                        <p>Период: @lawyerReport.Period</p>
                        @if (lawyerReport.SelectedLawyerId.HasValue)
                        {
                            <p>Выбранный юрист: @lawyers.FirstOrDefault(l => l.id_user == lawyerReport.SelectedLawyerId)?.FullName</p>

                        }
                        else
                        {
                            <p>Все юристы</p>
                        }

                        <table class="report-table">
                            <thead>
                                <tr>
                                    <th>Юрист</th>
                                    <th>Создано</th>
                                    <th>В работе</th>
                                    <th>Закрыто</th>
                                    <th>Всего дел</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lawyerReport.Items)
                                {
                                    <tr>
                                        <td>@item.LawyerName</td>
                                        <td>@item.CreatedCases</td>
                                        <td>@item.InProgressCases</td>
                                        <td>@item.ClosedCases</td>
                                        <td>@item.TotalCases</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Итого:</th>
                                    <td>@lawyerReport.TotalCreated</td>
                                    <td>@lawyerReport.TotalInProgress</td>
                                    <td>@lawyerReport.TotalClosed</td>
                                    <td>@lawyerReport.TotalAllCases</td>
                                </tr>
                            </tfoot>
                        </table>
                        break;
                }
            </div>
        </div>
    }
</div>

@code {
    private object currentReport = null;
    private bool showModal = false;
    private DateTime startDate = DateTime.Today.AddMonths(-1);
    private DateTime endDate = DateTime.Today;
    private ReportType selectedReport;
    private List<Lawyer> lawyers = new();
    private int selectedLawyerId = 0;

    private enum ReportType { Income, Debt, Lawyer }

    protected override async Task OnInitializedAsync()
    {
        await LoadLawyers();
    }

    private async Task LoadLawyers()
    {
        try
        {
            if (dbConnection.State != System.Data.ConnectionState.Open)
                await dbConnection.OpenAsync();

            using var cmd = new NpgsqlCommand(@"
                SELECT id_user, firstname, lastname
                FROM ""User""
                WHERE role = 'lawyer'", dbConnection);

            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                lawyers.Add(new Lawyer
                    {
                        id_user = reader.GetInt32(0),
                        firstname = reader.GetString(1),
                        lastname = reader.GetString(2)
                    });
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при загрузке юристов: {ex.Message}");
        }
    }

    private void OpenModal(ReportType type)
    {
        selectedReport = type;
        selectedLawyerId = 0;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private void ClearReport()
    {
        currentReport = null;
    }

    private string GetModalTitle()
    {
        return selectedReport switch
        {
            ReportType.Income => "Отчет о доходах",
            ReportType.Debt => "Отчет о задолженностях",
            ReportType.Lawyer => "Отчет о работе юристов",
            _ => "Формирование отчета"
        };
    }

    private async Task GenerateSelectedReport()
    {
        showModal = false;

        try
        {
            switch (selectedReport)
            {
                case ReportType.Income:
                    currentReport = Reports.GenerateIncomeReport(dbConnection, startDate, endDate);
                    break;
                case ReportType.Debt:
                    currentReport = Reports.GenerateDebtReport(dbConnection, startDate, endDate);
                    break;
                case ReportType.Lawyer:
                    currentReport = await Reports.GenerateLawyerWorkReportAsync(dbConnection, startDate, endDate, selectedLawyerId);
                    break;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при генерации отчета: {ex.Message}");
        }
    }

    private class Lawyer
    {
        public int id_user { get; set; }
        public string firstname { get; set; }
        public string lastname { get; set; }
        public string FullName => $"{lastname} {firstname}";
    }
}

