@code {
    private List<Client> clients = new();
    private Client editingClient = new();
    private bool showDialog = false;
    private bool isEditMode = false;
    private string searchId = "";
    private List<Client> filteredClients => string.IsNullOrWhiteSpace(searchId)
        ? clients
        : clients.Where(c => c.id.ToString().Contains(searchId)).ToList();

    private bool showRequestDialog = false;
    private int selectedClientId;
    private string requestDescription = "";

    // Открыть окно запроса документов
    private void OpenRequestDialog(int clientId)
    {
        selectedClientId = clientId;
        requestDescription = "";
        showRequestDialog = true;
    }

    // Отправить запрос
    private void RequestDocument()
    {
        using var cmd = new NpgsqlCommand(
                @"INSERT INTO ""DocumentRequest"" (id_case, id_lawyer, id_client, description)
          VALUES (NULL, @lawyerId, @clientId, @desc)", dbConnection);

        cmd.Parameters.AddWithValue("lawyerId", 1); // Замените при необходимости
        cmd.Parameters.AddWithValue("clientId", selectedClientId);
        cmd.Parameters.AddWithValue("desc", requestDescription);

        cmd.ExecuteNonQuery();

        showRequestDialog = false;
        selectedClientId = 0;
        requestDescription = "";

        LoadClientDocuments(); // Обновим отображение
    }

    private Dictionary<int, List<(string filename, string description)>> clientDocuments = new();


    private void RequestDocument(int clientId)
    {
        // Пример: вставляем "пустой" запрос в таблицу DocumentRequest
        using var cmd = new NpgsqlCommand(
                @"INSERT INTO ""DocumentRequest"" (id_case, id_lawyer, id_client, description)
          VALUES (NULL, @lawyerId, @clientId, @desc)", dbConnection);

        cmd.Parameters.AddWithValue("lawyerId", 1); // Замените на текущего юриста
        cmd.Parameters.AddWithValue("clientId", clientId);
        cmd.Parameters.AddWithValue("desc", "Пожалуйста, предоставьте необходимые документы.");

        cmd.ExecuteNonQuery();
    }

    private void LoadClientDocuments()
    {
        clientDocuments.Clear();

        var cmd = new NpgsqlCommand(
                @"SELECT id_client, filename, description
          FROM ""DocumentRequest""", dbConnection);

        using var reader = cmd.ExecuteReader();
        while (reader.Read())
        {
            int clientId = reader.GetInt32(0);
            string filename = reader.IsDBNull(1) ? "(без файла)" : reader.GetString(1);
            string description = reader.IsDBNull(2) ? "(без описания)" : reader.GetString(2);

            if (!clientDocuments.ContainsKey(clientId))
                clientDocuments[clientId] = new List<(string, string)>();

            clientDocuments[clientId].Add((filename, description));
        }
    }



    protected override void OnInitialized()
    {
        clients = Client.GetAllClients(dbConnection);
        LoadClientDocuments();
    }


    private void StartAdd()
    {
        editingClient = new Client();
        isEditMode = false;
        showDialog = true;
    }

    private void StartEdit(Client client)
    {
        editingClient = new Client
            {
                id = client.id,
                firstname = client.firstname,
                lastname = client.lastname,
                number = client.number,
                email = client.email,
                login = client.login,
                password = client.password
            };
        isEditMode = true;
        showDialog = true;
    }

    private void SaveClient()
    {
        bool success = isEditMode
            ? Client.UpdateClient(dbConnection, editingClient)
            : Client.AddClient(dbConnection, editingClient);

        if (success)
        {
            clients = Client.GetAllClients(dbConnection);
            showDialog = false;
        }
    }

    private void DeleteClient(int id)
    {
        if (Client.DeleteClient(dbConnection, id))
        {
            clients = Client.GetAllClients(dbConnection);
        }
    }
}
