@page "/clientpage"
@using kontora1
@using Npgsql
@inject NpgsqlConnection dbConnection
<div class="container">
    <div style="display:flex; align-items:center; gap:10px;">
        <button class="add-button" @onclick="StartAdd">Добавить клиента</button>
        <input type="search" @bind="searchId" placeholder="Поиск по ID" style="padding: 10px 15px;margin-bottom:10px;margin-left:10px; border-radius: 4px; border: 1px solid #ccc;" />

    </div>

    <table class="client-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Логин</th>
                <th>Пароль</th>
                <th>Документы</th>
                <th>Запрос</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in filteredClients)
            {
                <tr>
                    <td>@c.id</td>
                    <td>@c.firstname</td>
                    <td>@c.lastname</td>
                    <td>@c.email</td>
                    <td>@c.number</td>
                    <td>@c.login</td>
                    <td>@c.password</td>
                    <td>
                        @if (clientDocuments.ContainsKey(c.id))
                        {
                            <ul>
                                @foreach (var doc in clientDocuments[c.id])
                                {
                                    <li>@doc.filename</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>
                        @if (clientDocuments.ContainsKey(c.id))
                        {
                            <ul>
                                @foreach (var doc in clientDocuments[c.id])
                                {
                                    <li>@doc.description</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>

                    <td>
                        <button class="edit-button" @onclick="() => StartEdit(c)">Редактировать</button>
                        <button class="delete-button" @onclick="() => DeleteClient(c.id)">Удалить</button>
                        <button class="request-button" @onclick="() => OpenRequestDialog(c.id)">Запросить</button>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (showDialog)
    {
        <div class="modal">
            <div class="modal-content">
                <h3>@(isEditMode ? "Редактировать" : "Добавить") клиента</h3>

                <input placeholder="Имя" @bind="editingClient.firstname" />
                <input placeholder="Фамилия" @bind="editingClient.lastname" />
                <input placeholder="Email" @bind="editingClient.email" />
                <input placeholder="Телефон" @bind="editingClient.number" />
                <input placeholder="Логин" @bind="editingClient.login" />
                <input placeholder="Пароль" @bind="editingClient.password" />

                <br />
                <button class="save-button" @onclick="SaveClient">Сохранить</button>
                <button @onclick="() => showDialog = false">Отмена</button>
            </div>
        </div>
    }
    @if (showRequestDialog)
    {
        <div class="modal">
            <div class="modal-content">
                <h3>Запрос документов</h3>

                <textarea placeholder="Укажите, какие документы запросить" @bind="requestDescription"></textarea>

                <button class="save-button" @onclick="RequestDocument">Отправить</button>
                <button class="cancel-button" @onclick="() => showRequestDialog = false">Отмена</button>
            </div>
        </div>
    }

</div>
